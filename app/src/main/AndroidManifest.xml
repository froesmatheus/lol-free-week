<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matheusfroes.lolfreeweek">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.matheusfroes.lolfreeweek.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.matheusfroes.lolfreeweek.ui.freeweeklist.FreeWeekList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.championdetails.ChampionDetailsActivity"
            android:parentActivityName="com.matheusfroes.lolfreeweek.ui.freeweeklist.FreeWeekList" />
        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.addalert.AddChampionAlertActivity"
            android:label="@string/add_alert" />
        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.intro.IntroActivity"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.myalerts.MyAlertsActivity"
            android:label="@string/my_alerts"
            android:parentActivityName="com.matheusfroes.lolfreeweek.ui.freeweeklist.FreeWeekList" />
        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.settings.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.matheusfroes.lolfreeweek.ui.freeweeklist.FreeWeekList" />

        <activity
            android:name="com.matheusfroes.lolfreeweek.ui.fetchchampiondata.FetchChampionsDataActivity"
            android:theme="@style/AppTheme.DownloadChampion"></activity>

        <activity android:name=".ui.BaseActivity" />
    </application>

</manifest>